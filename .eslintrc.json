{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "semi": ["error", "always"],
        "space-before-function-paren": ["error", "never"],
        "no-trailing-spaces":["error", { "skipBlankLines": true , "ignoreComments": true}]
    }
}
